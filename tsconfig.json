{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["dist/*", "node_modules/*"],
  "typedocOptions": {
    "entryPoints": ["src/index.ts"],
    "out": "docs/api-docs",
    "exclude": ["node_modules"],
    "excludePrivate": true,
    "hideGenerator": true
  }
}
